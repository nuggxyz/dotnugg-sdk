{
    "name": "@nuggxyz/dotnugg-sdk",
    "version": "0.1.32",
    "description": "sdk for working with dotnugg files written in typescript",
    "license": "MIT",
    "repository": "https://github.com/nuggxyz/dotnugg-sdk.git",
    "author": "dub6ix <dub6ix@nugg.xyz>",
    "private": false,
    "main": "./dist/index.js",
    "typings": "./dist/index.d.ts",
    "files": [
        "dist",
        "LICENSE"
    ],
    "scripts": {
        "build:clean": "rm -rf build && yarn build",
        "build": "yarn install && yarn typechain && tsc",
        "start": "ts-node /src/index.ts --input ../nuggft-art --output ./out --filename txs",
        "generate-uploader": "tsc && node ./dist/scripts/unsafeStoreFilesBulkData.js",
        "encode": "ts-node ./src/scripts/encode.ts",
        "typechain": "typechain --target ethers-v5 --out-dir src/typechain/ './src/abis/*'",
        "test": "mocha -r ts-node/esm  src/_tests/**/*.spec.ts",
        "webpack-dev": "webpack --mode development",
        "webpack-watch": "webpack --mode development --watch",
        "package": "yarn typechain && yarn webpack --optimization-minimize --mode production"
    },
    "dependencies": {
        "@ethersproject/abi": "^5.0.0",
        "@ethersproject/bytes": "^5.0.0",
        "@ethersproject/providers": "^5.0.0",
        "@nuggxyz/dotnugg-grammar": "^0.2.1",
        "chokidar": "^3.5.3",
        "color-parse": "^1.4.2",
        "ethers": "^5.5.4",
        "minimist": "^1.2.5",
        "node-fetch": "^3.2.0",
        "node-loader": "^2.0.0",
        "plist": "^3.0.4",
        "tiny-invariant": "^1.2.0",
        "vscode-oniguruma": "^1.6.1",
        "vscode-textmate": "^5.4.1"
    },
    "devDependencies": {
        "@babel/core": "^7.16.12",
        "@typechain/ethers-v5": "^9.0.0",
        "@types/chai": "^4.3.0",
        "@types/fs-extra": "^9.0.13",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.17",
        "@types/plist": "^3.0.2",
        "@types/vscode": "^1.62.0",
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "arraybuffer-loader": "^1.0.8",
        "chai": "^4.3.6",
        "eslint": "^8.2.0",
        "eslint-config-universe": "^10.0.0",
        "eslint-plugin-import": "^2.25.3",
        "mocha": "^9.2.0",
        "prettier": "^2.4.1",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "typechain": "^7.0.0",
        "typescript": "^4.4.4",
        "webpack": "^5.68.0",
        "webpack-cli": "^4.9.2"
    }
}
